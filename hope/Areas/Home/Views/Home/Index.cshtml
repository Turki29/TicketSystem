@model IEnumerable<Section>
@{
    ViewData["title"] = "الأقسام";
}



<div class="d-flex justify-content-lg-center align-items-center">
    <div class="d-flex flex-column justify-content-lg-center  " style="min-width: 500px;">
        
        @if(Model.Count() == 0)
        {
            <a href="#" class="btn btn-info m-3" style="max-width: 500px;">
                ليس لديك أقسام للآن
            </a>
        }

        @foreach(Section section1 in Model)
        {
            <a asp-action="TicketsView" asp-route-section="@section1.Id" class="btn btn-info m-3" style="max-width: 500px;">
               @section1.Name
            </a>
        }

        @if(User.IsSystemAdmin())
        {
            

           <form asp-action="AddSection">
                <label>اسم القسم</label>
                <input type="text" name="sectionName" class="form-control" required/>
                <button class="btn btn-info"
                   type="submit">
                    أضف القسم
                </button>
           </form>
        }
    </div>
</div>